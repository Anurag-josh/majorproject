<% layout("/layouts/boilerplate") %>
 
<form action="/login" method="post">
    <section class="bg-light p-3 p-md-4 p-xl-5">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
              <div class="card border border-light-subtle rounded-4">
                <div class="card-body p-3 p-md-4 p-xl-5">
                  <div class="row">
                    <div class="col-12">
                      <div class="mb-5">
                        <h2 class="h4 text-center">Login</h2>
                        <h3 class="fs-6 fw-normal text-secondary text-center m-0">Enter your details to register</h3>
                      </div>
                    </div>
                  </div>

                    <div class="row gy-3 overflow-hidden">
                      <!-- Username Field -->
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
                          <label for="username" class="form-label">Username</label>
                        </div>
                      </div>
                      <!-- Password Field -->
                      <div class="col-12 position-relative">
                        <div class="form-floating mb-3">
                          <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                          <label for="password" class="form-label">Password</label>
                          
                          <!-- Eye Icon -->
                          <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;" onclick="togglePassword()">
                            <i class="fa-solid fa-eye" id="toggleIcon"></i>
                          </span>
                        </div>
                      </div>
                      
                      
                      <!-- Submit Button -->
                      <div class="col-12">
                        <div class="d-grid">
                          <button class="btn bsb-btn-xl btn-primary" type="submit">Log in</button>
                        </div>
                      </div>
                    </div>

                 
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      
</form>
