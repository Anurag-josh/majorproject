<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    gap: 10px; /* Reduced gap */
    flex-wrap: wrap;
    padding: 10px 0;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 14px;
    cursor: pointer;
    padding: 10px 15px;
    border-radius: 10px;
    transition: all 0.3s ease;
    margin-left: 1rem;

  }

  .filter:hover {
    background-color: #f8f8f8;
    transform: scale(1.05);
  }

  .filter i {
    font-size: 18px;
    margin-bottom: 4px;
  }

  .listing-link {
    text-decoration: none;
    color: inherit;
  }
  .tax-switch {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  padding: 10px 15px;
  border-radius: 10px;
  margin-left: 1rem;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 1px solid black;
}

.tax-switch:hover {
  background-color: #f8f8f8;
  transform: scale(1.05);
  
}

.tax-switch p {
  margin-top: 5px;
  margin-bottom: 0;
  font-size: 14px;
  text-align: center;
}

.tax-switch .form-check-input {
  cursor: pointer;
}

</style>

<!-- Filter Section -->
<div id="filters">
  <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
  <div class="filter"><i class="fa-solid fa-mountain-sun"></i><p>Mountain</p></div>
  <div class="filter"><i class="fa-solid fa-water"></i><p>Lakefront</p></div>
  <div class="filter"><i class="fa-solid fa-umbrella-beach"></i><p>Beach</p></div>
  <div class="filter"><i class="fa-solid fa-tree"></i><p>Cabin</p></div>
  <div class="filter"><i class="fa-solid fa-city"></i><p>City</p></div>
  <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
  <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
  <div class="filter"><i class="fa-solid fa-mug-hot"></i><p>Breakfast</p></div>
  <div class="filter"><i class="fa-solid fa-dog"></i><p>Pet-friendly</p></div>
  <div class="tax-switch">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    </div>
    <p>Taxes</p>
  </div>
</div>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 ">
  <% for(let listing of alllistings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url || 'https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=60' %>"
          class="card-img-top"
          alt="Listing Image"
          style="height: 20rem; object-fit: cover;"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
            <i class="tax-info">&nbsp; +18% taxes</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
    const taxSwitch = document.getElementById('flexSwitchCheckDefault');
    const taxLabels = document.querySelectorAll('.tax-info');
  
    // Initial hide
    taxLabels.forEach(t => t.style.display = 'none');
  
    taxSwitch.addEventListener('change', () => {
      const showTaxes = taxSwitch.checked;
      taxLabels.forEach(label => {
        label.style.display = showTaxes ? 'inline' : 'none';
      });
    });
  </script>
  